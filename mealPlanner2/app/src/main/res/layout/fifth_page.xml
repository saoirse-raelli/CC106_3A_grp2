<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- layout to ng header -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header"
        android:padding="16dp"
        android:gravity="left">

        <!-- TextView for the header text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECIPE BOOK"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <!-- layout to ng header ends here -->


    <TextView
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Page 5: Pilian ng Reqs"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="428dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="34dp"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="16dp">  <!-- Align items to the left -->

        <!-- btnBreakfast -->
        <Button
            android:id="@+id/btnBreakfast"
            android:layout_width="284dp"
            android:layout_height="77dp"
            android:text="breakfast" />

        <!-- btnLunch -->
        <Button
            android:id="@+id/btnLunch"
            android:layout_width="284dp"
            android:layout_height="77dp"
            android:text="lunch" />

        <!-- btnMerienda -->
        <Button
            android:id="@+id/btnMerienda"
            android:layout_width="284dp"
            android:layout_height="77dp"
            android:text="merienda" />

        <!-- btnDinner -->
        <Button
            android:id="@+id/btnDinner"
            android:layout_width="284dp"
            android:layout_height="77dp"
            android:text="dinner" />

        <!-- btnMidnightSnack -->
        <Button
            android:id="@+id/btnMidnightSnacks"
            android:layout_width="285dp"
            android:layout_height="77dp"
            android:text="midnight snacks" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="73dp"
        android:backgroundTint="#D8DBE0"
        android:text="Back"/>

</RelativeLayout>
