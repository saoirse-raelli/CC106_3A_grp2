<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Linear layout for the header background -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header"
        android:padding="16dp"
        android:gravity="left">
        <!-- header background ends here -->


        <!-- TextView for the header text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Planner Homepage"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <!-- layout to ng header ends here -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="567dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="this page is for homepage"
        android:textColor="@color/black"
        android:textSize="19dp" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="258dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="71dp"
        android:text="+ Create New Recipe" />

    <Button
        android:id="@+id/btnSet"
        android:layout_width="258dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="501dp"
        android:layout_marginEnd="70dp"
        android:text="+ Set Meal Plan" />


</RelativeLayout>