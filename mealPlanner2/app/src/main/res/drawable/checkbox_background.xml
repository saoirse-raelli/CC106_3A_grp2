<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FD8DEE" /> <!-- Light blue background -->

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#FFC107" /> <!-- Darker blue border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the background -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
